---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <!-- Hero Section -->
  <section class="mb-12">
    <h1 class="text-4xl font-bold text-slate-800">
      Website Resmi Desa Sri Mulya Jaya
    </h1>
    <p class="mt-3 max-w-2xl text-lg text-slate-600">
      Media informasi resmi Pemerintah Desa Sri Mulya Jaya mengenai profil,
      kegiatan, dan layanan desa.
    </p>

    <div class="mt-6 flex gap-4">
      <a
        href="/profil"
        class="rounded-lg bg-blue-600 px-6 py-3 font-medium text-white transition hover:bg-blue-700"
      >
        Profil Desa
      </a>
      <a
        href="/berita"
        class="rounded-lg border border-blue-600 px-6 py-3 font-medium text-blue-600 transition hover:bg-blue-50"
      >
        Berita Desa
      </a>
    </div>
  </section>

  <!-- Info Ringkas -->
  <section class="grid gap-6 md:grid-cols-3">
    <div class="rounded-xl bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-800">Jumlah Penduduk</h3>
      <p class="mt-2 text-2xl font-bold text-blue-600">2.350</p>
    </div>

    <div class="rounded-xl bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-800">Kepala Keluarga</h3>
      <p class="mt-2 text-2xl font-bold text-blue-600">640</p>
    </div>

    <div class="rounded-xl bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-800">Luas Wilayah</h3>
      <p class="mt-2 text-2xl font-bold text-blue-600">1.250 Ha</p>
    </div>
  </section>
</MainLayout>
